# EduProof Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=EduProof
DEBUG=false
ENVIRONMENT=production
PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Database
# For Railway: Use DATABASE_URL from environment (Railway provides this automatically)
# For local: postgresql+asyncpg://user:password@localhost:5432/eduproof
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/eduproof

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=eduproof-files

# Cloudinary (Alternative Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Firebase (Notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# AI Service
AI_SERVICE_URL=http://localhost:8001
OPENAI_API_KEY=your-openai-key

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
